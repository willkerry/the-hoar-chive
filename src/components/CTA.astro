---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  href={href}
  class="px-4 py-2 no-underline uppercase font-medium border-2 border-gray-800 rounded focus:outline-none hover:bg-gray-800 hover:text-white focus:ring-4 focus:ring-yellow-400 active:translate-y-px active:bg-gray-700 active:text-white"
>
  <slot />
</a>
